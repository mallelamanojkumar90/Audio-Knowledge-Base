PORT=3001

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/audio_kb

# AI Configuration
AI_PROVIDER=groq  # Options: groq, openai, anthropic

# Required: Groq API Key (for transcription and chat)
GROQ_API_KEY=gsk_...
GROQ_MODEL=llama-3.3-70b-versatile

# Optional: For semantic search (better accuracy)
OPENAI_API_KEY=sk-...

# Optional: Alternative AI providers
ANTHROPIC_API_KEY=sk-ant-...

# Optional: Pinecone for persistent vector storage
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_ENVIRONMENT=your-environment
PINECONE_INDEX_NAME=audio-transcripts

# Email Configuration (Optional)
# Options: console (default, logs to console), gmail, outlook, smtp
EMAIL_PROVIDER=console

# Gmail Configuration (if using gmail)
# Note: For Gmail, you need to use an "App Password" instead of your regular password
# Generate one at: https://myaccount.google.com/apppasswords
# EMAIL_PROVIDER=gmail
# EMAIL_USER=your-email@gmail.com
# EMAIL_PASSWORD=your-app-password
# EMAIL_FROM=your-email@gmail.com
# EMAIL_FROM_NAME=Audio Knowledge Base

# Outlook Configuration (if using outlook)
# EMAIL_PROVIDER=outlook
# EMAIL_USER=your-email@outlook.com
# EMAIL_PASSWORD=your-password
# EMAIL_FROM=your-email@outlook.com
# EMAIL_FROM_NAME=Audio Knowledge Base

# Custom SMTP Configuration (if using smtp)
# EMAIL_PROVIDER=smtp
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_SECURE=false  # true for port 465, false for other ports
# EMAIL_USER=your-email@example.com
# EMAIL_PASSWORD=your-password
# EMAIL_FROM=your-email@example.com
# EMAIL_FROM_NAME=Audio Knowledge Base

# Environment
NODE_ENV=development
FRONTEND_URL=http://localhost:3000
